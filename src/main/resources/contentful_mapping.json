{
  "_all": {
    "store": true
  },
  "dynamic_templates": [
    {
      "ignored_fields": {
        "match_pattern": "regex",
        "match": "images|space|revision|type",
        "mapping": {
          "include_in_all": false,
          "index": false
        }
      }
    },
    {
      "text_fields": {
        "match_pattern": "regex",
        "match": "title|description",
        "mapping": {
          "boost": 10
        }
      }
    },
    {
      "locale": {
        "match": "id",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "label",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "isoCode",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "locale",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "vocabularies": {
        "match": "vocabulary*",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "countries": {
        "match": "countryOf*",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "title": {
        "path_match": "title.*",
        "mapping": {
          "type": "text"
        }
      }
    }
  ],
  "properties": {
    "contentType": {
      "type": "keyword"
    },
    "contentful_metadata_tags": {
      "type": "keyword"
    }
  }
}
