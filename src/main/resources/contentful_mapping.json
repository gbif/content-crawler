{
  "dynamic_templates": [
    {
      "ignored_fields": {
        "match_pattern": "regex",
        "match": "images|space|revision|type",
        "mapping": {
          "type": "object",
          "enabled": false
        }
      }
    },
    {
      "text_fields": {
        "match_pattern": "regex",
        "match": "title|description",
        "mapping": {
          "type": "text",
          "copy_to": "search_text"
        }
      }
    },
    {
      "locale": {
        "match": "id",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "label",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "isoCode",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "locale": {
        "match": "locale",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "vocabularies": {
        "match": "vocabulary*",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "countries": {
        "match": "countryOf*",
        "mapping": {
          "type": "keyword"
        }
      }
    },
    {
      "title": {
        "path_match": "title.*",
        "mapping": {
          "type": "text",
          "copy_to": "search_text"
        }
      }
    }
  ],
  "properties": {
    "search_text": {
      "type": "text"
    },
    "contentType": {
      "type": "keyword"
    },
    "contentful_metadata_tags": {
      "type": "keyword"
    }
  }
}
